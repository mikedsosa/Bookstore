@{ ViewData["Title"] = "Home Page"; }

@*Call in model to be used*@
@model Mike05.Models.ViewModels.BookListViewModel
@*Create div using bootstrap and place a book object inside of it.*@
@foreach (var b in Model.Books)
{
<partial name="BookSummary" model="b" />
}

@*Buttons for pagination*@
<div page-model="@Model.PagingInfo" page-action="Index"
     page-classes-enabled="true"
     page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     class="btn-group pull-right m-1"></div>