@model IEnumerable<string>
@* Create a link for the home page *@
<a class="btn btn-block btn-outline-secondary"
   asp-action="Index"
   asp-controller="Home"
   asp-route-category="">Home</a>

@* Create links for each category that we can find in our model *@
@foreach (string category in Model)
{
<a class="btn btn-block @(category == ViewBag.SelectedType ? "btn-primary" : "btn-outline-secondary")"
   asp-action="Index"
   asp-controller="Home"
   asp-route-category="@category"
   asp-route-page="1">@category</a>}